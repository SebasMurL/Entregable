@code {
    // Variable para controlar el colapso del menú completo (hamburguesa)
    private bool colapsado = true;

    // Diccionario para controlar el estado colapsado de cada sección
    // Clave: número de sección, Valor: true=colapsada, false=expandida
    private Dictionary<int, bool> seccionesColapsadas = new()
    {
        { 1, false },  // Catálogos Base - colapsada por defecto
        { 2, true }, // Gestión Comercial - expandida por defecto
        { 3, true }  // Seguridad - expandida por defecto
    };

    /*
        Propiedad que define la clase CSS aplicada al contenedor del menú.

        Se usa un operador ternario:
        - Si colapsado == true → retorna "collapse"
        - Si colapsado == false → retorna null (sin clase)

        Nota: Se declara como string? porque puede devolver un valor nulo.
        Esto evita el warning CS8603 ("possible null reference return").
    */
    private string? NavMenuCssClass => colapsado ? "collapse" : null;

    /// <summary>
    /// Alterna el estado del menú completo (para modo móvil).
    /// </summary>
    private void ToggleNavMenu()
    {
        colapsado = !colapsado;
    }

    /// <summary>
    /// Alterna el estado de una sección específica (colapsar/expandir).
    /// </summary>
    /// <param name="numeroSeccion">Identificador de la sección (1, 2, 3, 4...)</param>
    private void ToggleSeccion(int numeroSeccion)
    {
        if (seccionesColapsadas.ContainsKey(numeroSeccion))
        {
            seccionesColapsadas[numeroSeccion] = !seccionesColapsadas[numeroSeccion];
        }
    }
}
