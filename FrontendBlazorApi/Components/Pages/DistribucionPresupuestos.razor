@page "/distribucionpresupuestos"
@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@using FrontendBlazorApi.Servicios
@using FrontendBlazorApi.Components
@inject IHttpClientFactory fabricaHttp
@inject ServicioApiGenerico servicioApi
@inherits PaginaAutenticada
@rendermode InteractiveServer

<PageTitle>Distribución de Presupuestos</PageTitle>

@if (!AutenticacionVerificada)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-2 text-muted">Verificando autenticación...</p>
    </div>
}
else
{
    <h3>Gestión de Distribución de Presupuestos</h3>

    <div class="mb-3 d-flex gap-2">
        <button type="button" class="btn btn-outline-primary" @onclick="CargarDistribuciones">Mostrar todos</button>
        <button type="button" class="btn btn-outline-dark" @onclick="LimpiarFormulario">Limpiar</button>
    </div>

    @if (!string.IsNullOrWhiteSpace(mensaje))
    {
        <div class="@claseAviso" role="alert">@mensaje</div>
    }

    <h4>Formulario de Distribución</h4>

    <EditForm Model="distActual" OnValidSubmit="GuardarSegunEstado" FormName="DistribucionForm">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="row g-3">
            <div class="col-md-2">
                <label class="form-label">ID</label>
                <InputNumber class="form-control" @bind-Value="distActual.Id" readonly="@existeDistribucion" />
            </div>

            <div class="col-md-4">
                <label class="form-label">Presupuesto Padre</label>
                <InputSelect class="form-control" @bind-Value="distActual.IdPresupuestoPadre">
                    <option value="0">Seleccione un presupuesto</option>
                    @foreach (var p in listaPresupuestos)
                    {
                        <option value="@p.Id">Presupuesto #@p.Id - @p.Estado</option>
                    }
                </InputSelect>
            </div>

            <div class="col-md-4">
                <label class="form-label">Proyecto Hijo</label>
                <InputSelect class="form-control" @bind-Value="distActual.IdProyectoHijo">
                    <option value="0">Seleccione un proyecto</option>
                    @foreach (var proj in listaProyectos)
                    {
                        <option value="@proj.Id">@proj.IdProyectoPadre</option>
                    }
                </InputSelect>
            </div>

            <div class="col-md-2">
                <label class="form-label">Monto Asignado</label>
                <InputNumber class="form-control" @bind-Value="distActual.MontoAsignado" />
            </div>
        </div>

        <div class="mt-3 d-flex flex-wrap gap-2">
            <button type="submit" class="btn btn-primary">@textoBotonGuardar</button>
            <button type="button" class="btn btn-secondary" @onclick="BuscarPorId">Buscar</button>
            <button type="button" class="btn btn-danger" @onclick="EliminarDistribucion" disabled="@(!existeDistribucion)">Eliminar</button>
        </div>
    </EditForm>

    <hr />

    @if (cargando)
    {
        <div class="text-center py-3">
            <div class="spinner-border text-primary"></div>
            <p class="mt-2 text-muted">Cargando distribuciones...</p>
        </div>
    }
    else if (listaDistribuciones.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No hay distribuciones registradas.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Presupuesto Padre</th>
                        <th>Proyecto Hijo</th>
                        <th>Monto Asignado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dist in listaDistribuciones)
                    {
                        <tr>
                            <td>@dist.Id</td>
                            <td>@ObtenerNombrePresupuesto(dist.IdPresupuestoPadre)</td>
                            <td>@ObtenerNombreProyecto(dist.IdProyectoHijo)</td>
                            <td>@dist.MontoAsignado.ToString("N2")</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-primary"
                                        @onclick="@(() => CargarEnFormulario(dist))">
                                    <i class="bi bi-pencil"></i> Editar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <span class="badge bg-primary">Total: @listaDistribuciones.Count distribuciones</span>
        </div>
    }
}

@code {
    private List<DistribucionPresupuesto> listaDistribuciones = new();
    private List<Presupuesto> listaPresupuestos = new();
    private List<Proyecto> listaProyectos = new();

    [SupplyParameterFromForm]
    private DistribucionPresupuesto distActual { get; set; } = new();

    private bool existeDistribucion = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;

    private const string urlBaseApi = "api/distribucionpresupuesto";

    protected override async Task OnAutenticacionVerificada()
    {
        await CargarPresupuestos();
        await CargarProyectos();
        await CargarDistribuciones();
        StateHasChanged();
    }

    private async Task CargarDistribuciones()
    {
        try
        {
            cargando = true;
            var datos = await servicioApi.ObtenerTodosAsync<DistribucionPresupuesto>("distribucionpresupuesto");
            listaDistribuciones = datos ?? new List<DistribucionPresupuesto>();
            mensaje = $"Se cargaron {listaDistribuciones.Count} distribución(es).";
            claseAviso = "alert alert-success";
        }
        catch (Exception e)
        {
            mensaje = $"Error al listar distribuciones: {e.Message}";
            claseAviso = "alert alert-danger";
        }
        finally { cargando = false; }
    }

    private async Task CargarPresupuestos()
    {
        try
        {
            listaPresupuestos = await servicioApi.ObtenerTodosAsync<Presupuesto>("presupuesto") ?? new();
        }
        catch (Exception e)
        {
            mensaje = $"Error al cargar presupuestos: {e.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task CargarProyectos()
    {
        try
        {
            listaProyectos = await servicioApi.ObtenerTodosAsync<Proyecto>("proyecto") ?? new();
        }
        catch (Exception e)
        {
            mensaje = $"Error al cargar proyectos: {e.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private string ObtenerNombrePresupuesto(int id) =>
        listaPresupuestos.FirstOrDefault(p => p.Id == id) is { } x
        ? $"#{x.Id} - {x.Estado}"
        : "Desconocido";

    private string ObtenerNombreProyecto(int id) =>
        listaProyectos.FirstOrDefault(p => p.Id == id)?.Titulo ?? "Desconocido";

    private async Task BuscarPorId()
    {
        LimpiarMensajes();

        if (distActual.Id <= 0)
        {
            mensaje = "Debe ingresar un ID válido.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiDistribucionPresupuestos");
            var ruta = $"{urlBaseApi}/id/{distActual.Id}";
            var respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<DistribucionPresupuesto>>>(ruta);
            var encontrado = respuesta?.Datos?.FirstOrDefault();

            if (encontrado is not null)
            {
                distActual = encontrado;
                existeDistribucion = true;
                textoBotonGuardar = "Actualizar";
                mensaje = "Distribución cargada.";
                claseAviso = "alert alert-success";
            }
            else
            {
                existeDistribucion = false;
                textoBotonGuardar = "Crear";
                mensaje = "Distribución no encontrada.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception e)
        {
            mensaje = $"Error al buscar: {e.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeDistribucion)
            await ActualizarDistribucion();
        else
            await CrearDistribucion();
    }

    private async Task CrearDistribucion()
    {
        LimpiarMensajes();

        if (Vacio(distActual))
            return;

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiDistribucionPresupuestos");
            var respuesta = await cliente.PostAsJsonAsync(urlBaseApi, distActual);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Distribución creada correctamente.";
                claseAviso = "alert alert-success";
                await CargarDistribuciones();
                LimpiarFormulario();
            }
            else
            {
                mensaje = await respuesta.Content.ReadAsStringAsync();
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception e)
        {
            mensaje = $"Error al crear: {e.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarDistribucion()
    {
        LimpiarMensajes();

        if (distActual.Id <= 0)
        {
            mensaje = "ID inválido para actualizar.";
            claseAviso = "alert alert-warning";
            return;
        }

        if (Vacio(distActual))
            return;

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiDistribucionPresupuestos");
            var ruta = $"{urlBaseApi}/id/{distActual.Id}";
            var respuesta = await cliente.PutAsJsonAsync(ruta, distActual);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Distribución actualizada correctamente.";
                claseAviso = "alert alert-success";
                await CargarDistribuciones();
            }
            else
            {
                mensaje = await respuesta.Content.ReadAsStringAsync();
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception e)
        {
            mensaje = $"Error al actualizar: {e.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task EliminarDistribucion()
    {
        LimpiarMensajes();

        if (distActual.Id <= 0)
        {
            mensaje = "Debe ingresar un ID válido.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiDistribucionPresupuestos");
            var ruta = $"{urlBaseApi}/id/{distActual.Id}";
            var respuesta = await cliente.DeleteAsync(ruta);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Distribución eliminada.";
                claseAviso = "alert alert-success";
                await CargarDistribuciones();
                LimpiarFormulario();
            }
            else
            {
                mensaje = await respuesta.Content.ReadAsStringAsync();
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception e)
        {
            mensaje = $"Error al eliminar: {e.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(DistribucionPresupuesto d)
    {
        distActual = new()
        {
            Id = d.Id,
            IdPresupuestoPadre = d.IdPresupuestoPadre,
            IdProyectoHijo = d.IdProyectoHijo,
            MontoAsignado = d.MontoAsignado
        };

        existeDistribucion = true;
        textoBotonGuardar = "Actualizar";
        mensaje = "Distribución cargada.";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        distActual = new();
        existeDistribucion = false;
        textoBotonGuardar = "Crear";
        LimpiarMensajes();
    }

    private void LimpiarMensajes()
    {
        mensaje = "";
        claseAviso = "alert alert-info";
    }

    private bool Vacio(DistribucionPresupuesto p)
    {
        if (p.IdPresupuestoPadre <= 0)
        {
            mensaje = "Debe seleccionar un presupuesto padre.";
            claseAviso = "alert alert-warning";
            return true;
        }

        if (p.IdProyectoHijo <= 0)
        {
            mensaje = "Debe seleccionar un proyecto hijo.";
            claseAviso = "alert alert-warning";
            return true;
        }

        if (p.MontoAsignado <= 0)
        {
            mensaje = "El monto asignado debe ser mayor a cero.";
            claseAviso = "alert alert-warning";
            return true;
        }

        return false;
    }
}
