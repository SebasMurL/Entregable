@page "/metasestrategicas"
@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@using FrontendBlazorApi.Servicios
@using FrontendBlazorApi.Components
@inject IHttpClientFactory fabricaHttp
@inject ServicioApiGenerico servicioApi
@inherits PaginaAutenticada
@rendermode InteractiveServer

<PageTitle>Metas Estratégicas</PageTitle>

@if (!AutenticacionVerificada)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-2 text-muted">Verificando autenticación...</p>
    </div>
}
else
{
    <h3>Gestión de Metas Estratégicas</h3>

    <div class="mb-3 d-flex gap-2">
        <button type="button" class="btn btn-outline-primary" @onclick="CargarMetasEstrategicas">Mostrar todas</button>
        <button type="button" class="btn btn-outline-dark" @onclick="LimpiarFormulario">Limpiar</button>
    </div>

    @if (!string.IsNullOrWhiteSpace(mensaje))
    {
        <div class="@claseAviso" role="alert">@mensaje</div>
    }

    <h4>Formulario de Metas Estratégicas</h4>
    <EditForm Model="metaActual" OnValidSubmit="GuardarSegunMeta" FormName="MetaEstrategicaForm">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="row g-3">
            <div class="col-md-12">
                <label class="form-label">Objetivo Estratégico</label>
                <InputSelect class="form-control" @bind-Value="metaActual.IdObjetivo">
                    <option value="">Seleccione un objetivo estratégico</option>
                    @foreach (var objetivo in listaObjetivosEstrategicos)
                    {
                        <option value="@objetivo.Id">@objetivo.Titulo</option>
                    }
                </InputSelect>
            </div>
            <div class="col-md-12">
                <label class="form-label">Título</label>
                <InputText class="form-control" @bind-Value="metaActual.Titulo" />
            </div>
            <div class="col-md-12">
                <label class="form-label">Descripción</label>
                <InputTextArea class="form-control" @bind-Value="metaActual.Descripcion" rows="4" />
            </div>
            <div class="col-md-12">
                <label class="form-label">Título para buscar</label>
                <InputText class="form-control" @bind-Value="tituloBusqueda" placeholder="Ingrese el título a buscar" />
            </div>
        </div>
        <div class="mt-3 d-flex flex-wrap gap-2">
            <button type="submit" class="btn btn-primary">@textoBotonGuardar</button>
            <button type="button" class="btn btn-secondary" @onclick="BuscarPorTitulo">Buscar por Título</button>
            <button type="button" class="btn btn-danger" @onclick="EliminarMeta" disabled="@(!existeMeta)">Eliminar</button>
        </div>
    </EditForm>

    <hr />

    @if (cargando)
    {
        <div class="text-center py-3">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-2 text-muted">Cargando metas estratégicas...</p>
        </div>
    }
    else if (listaMetasEstrategicas.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No hay metas estratégicas disponibles.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Objetivo Estratégico</th>
                        <th>Título</th>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var meta in listaMetasEstrategicas)
                    {
                        <tr>
                            <td>@meta.Id</td>
                            <td class="fw-bold">@ObtenerNombreObjetivo(meta.IdObjetivo)</td>
                            <td>@meta.Titulo</td>
                            <td>@meta.Descripcion</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                        @onclick="@(() => CargarEnFormulario(meta))">
                                    <i class="bi bi-pencil"></i> Editar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="mt-3">
            <span class="badge bg-primary">Total: @listaMetasEstrategicas.Count metas estratégicas</span>
        </div>
    }
}

@code {
    private List<MetaEstrategica> listaMetasEstrategicas = new();
    private List<ObjetivoEstrategico> listaObjetivosEstrategicos = new();
    private Dictionary<int, string> objetivosDict = new();
    
    [SupplyParameterFromForm]
    private MetaEstrategica metaActual { get; set; } = new();
    
    private string tituloBusqueda = "";
    private bool existeMeta = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;
    private const string urlBaseApi = "api/metaestrategica";

    protected override async Task OnAutenticacionVerificada()
    {
        await CargarMetasEstrategicas();
        await CargarObjetivosEstrategicos();
        StateHasChanged();
    }

    private async Task CargarMetasEstrategicas()
    {
        try
        {
            cargando = true;
            var respuesta = await servicioApi.ObtenerTodosAsync<MetaEstrategica>("metaestrategica");
            listaMetasEstrategicas = respuesta ?? new List<MetaEstrategica>();
            mensaje = $"Se cargaron {listaMetasEstrategicas.Count} meta(s) estratégica(s).";
            claseAviso = "alert alert-success";
        }
        catch (Exception error)
        {
            mensaje = $"Error al listar metas estratégicas: {error.Message}";
            claseAviso = "alert alert-danger";
            listaMetasEstrategicas = new List<MetaEstrategica>();
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task CargarObjetivosEstrategicos()
    {
        try
        {
            var respuesta = await servicioApi.ObtenerTodosAsync<ObjetivoEstrategico>("objetivoestrategico");
            listaObjetivosEstrategicos = respuesta ?? new List<ObjetivoEstrategico>();
            objetivosDict = listaObjetivosEstrategicos.ToDictionary(o => o.Id, o => o.Titulo);
        }
        catch (Exception error)
        {
            Console.WriteLine($"Error al cargar objetivos estratégicos: {error.Message}");
        }
    }

    private async Task BuscarPorTitulo()
    {
        LimpiarMensajes();
        if (string.IsNullOrWhiteSpace(tituloBusqueda))
        {
            mensaje = "Debe ingresar un título para buscar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiMetasEstrategicas");
            var ruta = $"{urlBaseApi}/titulo/{Uri.EscapeDataString(tituloBusqueda.Trim())}";
            var respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<MetaEstrategica>>>(ruta);
            var encontradas = respuesta?.Datos ?? new List<MetaEstrategica>();

            if (encontradas.Any())
            {
                var encontrado = encontradas.First();
                metaActual = new MetaEstrategica
                {
                    Id = encontrado.Id,
                    IdObjetivo = encontrado.IdObjetivo,
                    Titulo = encontrado.Titulo,
                    Descripcion = encontrado.Descripcion
                };
                existeMeta = true;
                textoBotonGuardar = "Actualizar";
                mensaje = $"Se encontró '{encontrado.Titulo}'. Cargado en el formulario.";
                claseAviso = "alert alert-success";
            }
            else
            {
                existeMeta = false;
                textoBotonGuardar = "Crear";
                mensaje = $"No se encontraron metas con el título '{tituloBusqueda}'.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            existeMeta = false;
            textoBotonGuardar = "Crear";
            mensaje = $"Error al buscar meta: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task GuardarSegunMeta()
    {
        if (existeMeta)
            await ActualizarMeta();
        else
            await CrearMeta();
    }

    private async Task CrearMeta()
    {
        LimpiarMensajes();
        try
        {
            var metaParaCrear = new
            {
                IdObjetivo = metaActual.IdObjetivo,
                Titulo = metaActual.Titulo,
                Descripcion = metaActual.Descripcion
            };

            if (Vacio(metaParaCrear))
            {
                return;
            }

            var cliente = fabricaHttp.CreateClient("ApiMetasEstrategicas");
            var respuesta = await cliente.PostAsJsonAsync(urlBaseApi, metaParaCrear);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Meta estratégica creada correctamente.";
                claseAviso = "alert alert-success";
                await CargarMetasEstrategicas();
                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo crear la meta estratégica. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al crear meta estratégica: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarMeta()
    {
        LimpiarMensajes();
        if (metaActual.Id <= 0)
        {
            mensaje = "Debe indicar un ID válido para actualizar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var metaParaActualizar = new
            {
                IdObjetivo = metaActual.IdObjetivo,
                Titulo = metaActual.Titulo,
                Descripcion = metaActual.Descripcion
            };

            if (Vacio(metaParaActualizar))
            {
                return;
            }

            var cliente = fabricaHttp.CreateClient("ApiMetasEstrategicas");
            var ruta = $"{urlBaseApi}/id/{metaActual.Id}";
            var respuesta = await cliente.PutAsJsonAsync(ruta, metaParaActualizar);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Meta estratégica actualizada correctamente.";
                claseAviso = "alert alert-success";
                await CargarMetasEstrategicas();
                existeMeta = true;
                textoBotonGuardar = "Actualizar";
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo actualizar la meta estratégica. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al actualizar meta estratégica: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task EliminarMeta()
    {
        LimpiarMensajes();
        if (metaActual.Id <= 0)
        {
            mensaje = "Debe indicar un ID válido para eliminar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiMetasEstrategicas");
            var ruta = $"{urlBaseApi}/id/{metaActual.Id}";
            var respuesta = await cliente.DeleteAsync(ruta);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Meta estratégica eliminada correctamente.";
                claseAviso = "alert alert-success";
                await CargarMetasEstrategicas();
                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo eliminar la meta estratégica. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al eliminar meta estratégica: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ProbarConexion()
    {
        LimpiarMensajes();
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiMetasEstrategicas");
            var respuesta = await cliente.GetAsync(urlBaseApi);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Conexión con la API verificada.";
                claseAviso = "alert alert-success";
            }
            else
            {
                mensaje = $"La API respondió con estado {(int)respuesta.StatusCode}.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error de conexión a la API: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(MetaEstrategica meta)
    {
        metaActual = new MetaEstrategica
        {
            Id = meta.Id,
            IdObjetivo = meta.IdObjetivo,
            Titulo = meta.Titulo,
            Descripcion = meta.Descripcion
        };
        existeMeta = true;
        textoBotonGuardar = "Actualizar";
        mensaje = "Meta estratégica seleccionada desde el listado.";
        claseAviso = "alert alert-info";
    }

    private void LimpiarMensajes()
    {
        mensaje = "";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        metaActual = new MetaEstrategica();
        tituloBusqueda = "";
        existeMeta = false;
        textoBotonGuardar = "Crear";
        LimpiarMensajes();
    }

    private string ObtenerNombreObjetivo(int idObjetivo)
    {
        return objetivosDict.ContainsKey(idObjetivo) ? objetivosDict[idObjetivo] : "No encontrado";
    }

    private bool Vacio(dynamic m)
    {
        if (string.IsNullOrWhiteSpace(m.Titulo) || m.IdObjetivo <= 0)
        {
            mensaje = "Error: Título y Objetivo Estratégico son obligatorios";
            claseAviso = "alert alert-warning";
            return true;
        }
        return false;
    }
}