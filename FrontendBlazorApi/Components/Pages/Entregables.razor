@page "/entregables"
@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@using FrontendBlazorApi.Servicios
@using FrontendBlazorApi.Components
@inject IHttpClientFactory fabricaHttp
@inject ServicioApiGenerico servicioApi
@inject IServicioAuditoria servicioAuditoria
@inject IHttpContextAccessor httpContextAccessor
@inject NavigationManager NavigationManager
@inherits PaginaAutenticada
@inject ServicioAutenticacion ServicioAuth
@rendermode InteractiveServer

<PageTitle>Entregables</PageTitle>

@if (!AutenticacionVerificada)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-2 text-muted">Verificando autenticación...</p>
    </div>
}
else
{
    <h3>Gestión de Entregables</h3>

    <div class="mb-3 d-flex gap-2">
        <button type="button" class="btn btn-outline-primary" @onclick="CargarEntregables">Mostrar todos</button>
        <button type="button" class="btn btn-outline-dark" @onclick="LimpiarFormulario">Limpiar</button>
        <button type="button" class="btn btn-outline-info" @onclick="VerAuditoriaEntregables">
            <i class="bi bi-clock-history"></i> Ver Auditoría
        </button>
    </div>

    @if (!string.IsNullOrWhiteSpace(mensaje))
    {
        <div class="@claseAviso" role="alert">@mensaje</div>
    }

    <h4>Formulario de Entregable</h4>
    <EditForm Model="entregableActual" OnValidSubmit="GuardarSegunEstado" FormName="EntregableForm">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">ID</label>
                <InputNumber class="form-control" @bind-Value="entregableActual.Id" readonly="@existeEntregable" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Código</label>
                <InputText class="form-control" @bind-Value="entregableActual.Codigo" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Título</label>
                <InputText class="form-control" @bind-Value="entregableActual.Titulo" />
            </div>
            <div class="col-md-12">
                <label class="form-label">Descripción</label>
                <InputTextArea class="form-control" @bind-Value="entregableActual.Descripcion" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Fecha de Inicio</label>
                <InputDate class="form-control" @bind-Value="entregableActual.FechaInicio" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Fecha de Fin Prevista</label>
                <InputDate class="form-control" @bind-Value="entregableActual.FechaFinPrevista" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Fecha de Modificación</label>
                <InputDate class="form-control" @bind-Value="entregableActual.FechaModificacion" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Fecha de Finalización</label>
                <InputDate class="form-control" @bind-Value="entregableActual.FechaFinalizacion" />
            </div>
        </div>
        <div class="mt-3 d-flex flex-wrap gap-2">
            <button type="submit" class="btn btn-primary">@textoBotonGuardar</button>
            <button type="button" class="btn btn-secondary" @onclick="BuscarPorId">Buscar</button>
            <button type="button" class="btn btn-danger" @onclick="EliminarEntregable" disabled="@(!existeEntregable)">Eliminar</button>
        </div>
    </EditForm>

    <hr />

    @if (cargando)
    {
        <div class="text-center py-3">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-2 text-muted">Cargando entregables...</p>
        </div>
    }
    else if (listaEntregables.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No hay entregables disponibles.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Código</th>
                        <th>Título</th>
                        <th>Descripción</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Fin Prevista</th>
                        <th>Fecha Modificación</th>
                        <th>Fecha Finalización</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entregable in listaEntregables)
                    {
                        <tr>
                            <td>@entregable.Id</td>
                            <td class="fw-bold">@entregable.Codigo</td>
                            <td>@entregable.Titulo</td>
                            <td>@entregable.Descripcion</td>
                            <td>@entregable.FechaInicio?.ToString("dd/MM/yyyy")</td>
                            <td>@entregable.FechaFinPrevista?.ToString("dd/MM/yyyy")</td>
                            <td>@entregable.FechaModificacion?.ToString("dd/MM/yyyy")</td>
                            <td>@entregable.FechaFinalizacion?.ToString("dd/MM/yyyy")</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                        @onclick="@(() => CargarEnFormulario(entregable))">
                                    <i class="bi bi-pencil"></i> Editar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="mt-3">
            <span class="badge bg-primary">Total: @listaEntregables.Count entregables</span>
        </div>
    }
}

@code {
    private List<Entregable> listaEntregables = new();
    [SupplyParameterFromForm]
    private Entregable entregableActual { get; set; } = new();
    private bool existeEntregable = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;
    private const string urlBaseApi = "api/entregable";

    // Para auditoría
    private Entregable? entregableAnterior;

    protected override async Task OnAutenticacionVerificada()
    {
        await CargarEntregables();
        StateHasChanged();
    }

    private async Task CargarEntregables()
    {
        try
        {
            cargando = true;
            var respuesta = await servicioApi.ObtenerTodosAsync<Entregable>("entregable");
            listaEntregables = respuesta ?? new List<Entregable>();
            mensaje = $"Se cargaron {listaEntregables.Count} entregable(s).";
            claseAviso = "alert alert-success";
        }
        catch (Exception error)
        {
            mensaje = $"Error al listar entregables: {error.Message}";
            claseAviso = "alert alert-danger";
            listaEntregables = new List<Entregable>();
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task BuscarPorId()
    {
        LimpiarMensajes();
        if (entregableActual.Id <= 0)
        {
            mensaje = "Debe indicar un ID válido para buscar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiEntregables");
            var ruta = $"{urlBaseApi}/id/{entregableActual.Id}";
            var respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<Entregable>>>(ruta);
            var encontrado = respuesta?.Datos?.FirstOrDefault();

            if (encontrado is not null)
            {
                // Guardar estado anterior para auditoría
                entregableAnterior = new Entregable
                {
                    Id = encontrado.Id,
                    Codigo = encontrado.Codigo,
                    Titulo = encontrado.Titulo,
                    Descripcion = encontrado.Descripcion,
                    FechaInicio = encontrado.FechaInicio,
                    FechaFinPrevista = encontrado.FechaFinPrevista,
                    FechaModificacion = encontrado.FechaModificacion,
                    FechaFinalizacion = encontrado.FechaFinalizacion
                };

                entregableActual = new Entregable
                {
                    Id = encontrado.Id,
                    Codigo = encontrado.Codigo,
                    Titulo = encontrado.Titulo,
                    Descripcion = encontrado.Descripcion,
                    FechaInicio = encontrado.FechaInicio,
                    FechaFinPrevista = encontrado.FechaFinPrevista,
                    FechaModificacion = encontrado.FechaModificacion,
                    FechaFinalizacion = encontrado.FechaFinalizacion
                };
                existeEntregable = true;
                textoBotonGuardar = "Actualizar";
                mensaje = "Entregable cargado en el formulario.";
                claseAviso = "alert alert-success";
                
            }
            else
            {
                existeEntregable = false;
                textoBotonGuardar = "Crear";
                mensaje = "Entregable no encontrado.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            existeEntregable = false;
            textoBotonGuardar = "Crear";
            mensaje = $"Error al buscar entregable: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeEntregable)
        {
            await ActualizarEntregable();
        }
        else
        {
            await CrearEntregable();
        }
    }

    private async Task CrearEntregable()
    {
        LimpiarMensajes();
        try
        {
            var entregableParaCrear = new
            {
                Codigo = entregableActual.Codigo,
                Titulo = entregableActual.Titulo,
                Descripcion = entregableActual.Descripcion,
                FechaInicio = entregableActual.FechaInicio,
                FechaFinPrevista = entregableActual.FechaFinPrevista,
                FechaModificacion = entregableActual.FechaModificacion,
                FechaFinalizacion = entregableActual.FechaFinalizacion
            };
            
            if (Vacio(entregableParaCrear))
            {
                return;
            }

            var cliente = fabricaHttp.CreateClient("ApiEntregables");
            var respuesta = await cliente.PostAsJsonAsync(urlBaseApi, entregableParaCrear);
            
            if (respuesta.IsSuccessStatusCode)
            {
                // Auditoría después de crear
                await RegistrarAuditoriaCreacion(entregableActual);
                
                mensaje = "✅ Entregable creado correctamente.";
                claseAviso = "alert alert-success";
                await CargarEntregables();
                LimpiarFormulario();
                
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $" No se pudo crear el entregable. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $" Error al crear entregable: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarEntregable()
    {
        LimpiarMensajes();
        if (entregableActual.Id <= 0)
        {
            mensaje = "Debe indicar un ID válido para actualizar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var entregableParaActualizar = new
            {
                Codigo = entregableActual.Codigo,
                Titulo = entregableActual.Titulo,
                Descripcion = entregableActual.Descripcion,
                FechaInicio = entregableActual.FechaInicio,
                FechaFinPrevista = entregableActual.FechaFinPrevista,
                FechaModificacion = entregableActual.FechaModificacion,
                FechaFinalizacion = entregableActual.FechaFinalizacion
            };
            
            if (Vacio(entregableParaActualizar))
            {
                return;
            }

            var cliente = fabricaHttp.CreateClient("ApiEntregables");
            var ruta = $"{urlBaseApi}/id/{entregableActual.Id}";
            var respuesta = await cliente.PutAsJsonAsync(ruta, entregableParaActualizar);
            
            if (respuesta.IsSuccessStatusCode)
            {
                if (entregableAnterior != null)
                {
                    await RegistrarAuditoriaActualizacion(entregableAnterior, entregableActual);
                }
                else
                {
                    await RegistrarAuditoriaActualizacionBasica(entregableActual);
                }
                
                mensaje = "✏️ Entregable actualizado correctamente.";
                claseAviso = "alert alert-success";
                await CargarEntregables();
                existeEntregable = true;
                textoBotonGuardar = "Actualizar";
                
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $" No se pudo actualizar el entregable. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $" Error al actualizar entregable: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task EliminarEntregable()
    {
        LimpiarMensajes();
        if (entregableActual.Id <= 0)
        {
            mensaje = "Debe indicar un ID válido para eliminar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiEntregables");
            var ruta = $"{urlBaseApi}/id/{entregableActual.Id}";
            var respuesta = await cliente.DeleteAsync(ruta);
            
            if (respuesta.IsSuccessStatusCode)
            {
                // Auditoría después de eliminar
                await RegistrarAuditoriaEliminacion(entregableActual);
                
                mensaje = " Entregable eliminado correctamente.";
                claseAviso = "alert alert-success";
                await CargarEntregables();
                LimpiarFormulario();
                
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $" No se pudo eliminar el entregable. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $" Error al eliminar entregable: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    // Métodos de Auditoría
    private async Task<string> ObtenerUsuarioId()
    {
        try
        {
            // Usar el método ObtenerEmailUsuarioAsync() de tu ServicioAutenticacion
            var email = await ServicioAuth.ObtenerEmailUsuarioAsync();
            
            if (!string.IsNullOrEmpty(email))
            {
                return email;
            }
            else
            {
                return "UsuarioNoAutenticado";
            }
        }
        catch (Exception ex)
        {
            return "ErrorObteniendoUsuario";
        }
    }

    private async Task RegistrarAuditoriaCreacion(Entregable entregable)
    {
        try
        {
            var usuarioId = await ObtenerUsuarioId();
            var ipAddress = ObtenerIpAddress();
            var userAgent = ObtenerUserAgent();
            
            
            await servicioAuditoria.RegistrarCreacionAsync(entregable, usuarioId, ipAddress, userAgent);
            
        }
        catch (Exception ex)
        {
        }
    }

    private async Task RegistrarAuditoriaActualizacion(Entregable anterior, Entregable nuevo)
    {
        try
        {
            var usuarioId = await ObtenerUsuarioId();
            var ipAddress = ObtenerIpAddress();
            var userAgent = ObtenerUserAgent();
            
            
            await servicioAuditoria.RegistrarActualizacionAsync(anterior, nuevo, usuarioId, ipAddress, userAgent);
            
        }
        catch (Exception ex)
        {
        }
    }

    // Método de respaldo para cuando no hay datos anteriores
    private async Task RegistrarAuditoriaActualizacionBasica(Entregable nuevo)
    {
        try
        {
            var usuarioId = await ObtenerUsuarioId();
            var ipAddress = ObtenerIpAddress();
            var userAgent = ObtenerUserAgent();
            
            
            // Crear un entregable "vacío" como anterior para cumplir con la firma del método
            var anteriorBasico = new Entregable
            {
                Id = nuevo.Id,
                Codigo = "DESCONOCIDO",
                Titulo = "DESCONOCIDO", 
                Descripcion = "DESCONOCIDO"
            };
            
            await servicioAuditoria.RegistrarActualizacionAsync(anteriorBasico, nuevo, usuarioId, ipAddress, userAgent);
            
        }
        catch (Exception ex)
        {
        }
    }

    private async Task RegistrarAuditoriaEliminacion(Entregable entregable)
    {
        try
        {
            var usuarioId = await ObtenerUsuarioId();
            var ipAddress = ObtenerIpAddress();
            var userAgent = ObtenerUserAgent();
            
            
            await servicioAuditoria.RegistrarEliminacionAsync(entregable, usuarioId, ipAddress, userAgent);
            
        }
        catch (Exception ex)
        {
        }
    }

    private string ObtenerIpAddress()
    {
        return httpContextAccessor.HttpContext?.Connection?.RemoteIpAddress?.ToString() ?? "127.0.0.1";
    }

    private string ObtenerUserAgent()
    {
        return httpContextAccessor.HttpContext?.Request.Headers["User-Agent"].ToString() ?? "Navegador";
    }

    private void VerAuditoriaEntregables()
    {
        NavigationManager.NavigateTo("/auditorias?tabla=Entregable");
    }

    private async Task ProbarConexion()
    {
        LimpiarMensajes();
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiEntregables");
            var respuesta = await cliente.GetAsync(urlBaseApi);
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Conexión con la API verificada.";
                claseAviso = "alert alert-success";
            }
            else
            {
                mensaje = $"La API respondió con estado {(int)respuesta.StatusCode}.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error de conexión a la API: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(Entregable entregable)
    {
        // Guardar estado anterior para auditoría - HACER UNA COPIA PROFUNDA
        entregableAnterior = new Entregable
        {
            Id = entregable.Id,
            Codigo = entregable.Codigo,
            Titulo = entregable.Titulo,
            Descripcion = entregable.Descripcion,
            FechaInicio = entregable.FechaInicio,
            FechaFinPrevista = entregable.FechaFinPrevista,
            FechaModificacion = entregable.FechaModificacion,
            FechaFinalizacion = entregable.FechaFinalizacion
        };

        // Hacer una copia separada para el formulario
        entregableActual = new Entregable
        {
            Id = entregable.Id,
            Codigo = entregable.Codigo,
            Titulo = entregable.Titulo,
            Descripcion = entregable.Descripcion,
            FechaInicio = entregable.FechaInicio,
            FechaFinPrevista = entregable.FechaFinPrevista,
            FechaModificacion = entregable.FechaModificacion,
            FechaFinalizacion = entregable.FechaFinalizacion
        };
        
        existeEntregable = true;
        textoBotonGuardar = "Actualizar";
        mensaje = "Entregable seleccionado desde el listado.";
        claseAviso = "alert alert-info";

    }

    private void LimpiarMensajes()
    {
        mensaje = "";
        claseAviso = "alert alert-info";
        entregableAnterior = null;
    }

    private void LimpiarFormulario()
    {
        entregableActual = new Entregable();
        existeEntregable = false;
        textoBotonGuardar = "Crear";
        entregableAnterior = null;
        LimpiarMensajes();
    }
    
    private bool Vacio(dynamic p)
    {
        if (string.IsNullOrWhiteSpace(p.Codigo) || string.IsNullOrWhiteSpace(p.Titulo) || string.IsNullOrWhiteSpace(p.Descripcion))
        {
            mensaje = "Error: Los campos Código, Título y Descripción son obligatorios";
            claseAviso = "alert alert-warning";
            return true;
        }
        
        if (p.FechaInicio > p.FechaFinPrevista || p.FechaInicio > p.FechaFinalizacion)
        {
            mensaje = "Error: La fecha de inicio no puede ser mayor que la fecha de fin prevista o fecha de finalización";
            claseAviso = "alert alert-warning";
            return true;
        }
        
        return false;
    }
}