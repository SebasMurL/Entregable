@page "/archivos"

@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@using FrontendBlazorApi.Servicios
@using FrontendBlazorApi.Components
@inject IHttpClientFactory fabricaHttp
@inject ServicioApiGenerico servicioApi
@inherits PaginaAutenticada
@rendermode InteractiveServer

<PageTitle>Gestión de Archivos</PageTitle>

@if (!AutenticacionVerificada)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-2 text-muted">Verificando autenticación...</p>
    </div>
}
else
{
    <h3>Gestión de Archivos</h3>

    <div class="mb-3 d-flex gap-2">
        <button type="button" class="btn btn-outline-primary" @onclick="CargarArchivos">Mostrar todos</button>
        <button type="button" class="btn btn-outline-dark" @onclick="LimpiarFormulario">Limpiar</button>
    </div>

    @if (!string.IsNullOrWhiteSpace(mensaje))
    {
        <div class="@claseAviso" role="alert">@mensaje</div>
    }

    <h4>Formulario de Archivo</h4>
    <EditForm Model="archivoActual" OnValidSubmit="GuardarSegunEstado" FormName="ArchivoForm">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">ID</label>
                <InputNumber class="form-control" @bind-Value="archivoActual.Id" readonly="@existeArchivo" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Usuario</label>
                <select class="form-control" @bind="archivoActual.IdUsuario">
                    <option value="0">Seleccione un usuario</option>
                    @foreach (var usuario in listaUsuarios)
                    {
                        <option value="@usuario.Id">@usuario.Email</option>
                    }
                </select>
            </div>
            <div class="col-md-5">
                <label class="form-label">Nombre</label>
                <InputText class="form-control" @bind-Value="archivoActual.Nombre" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Ruta</label>
                <InputText class="form-control" @bind-Value="archivoActual.Ruta" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Tipo</label>
                <InputText class="form-control" @bind-Value="archivoActual.Tipo" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Fecha</label>
                <InputDate class="form-control" @bind-Value="archivoActual.Fecha" />
            </div>
        </div>
        <div class="mt-3 d-flex flex-wrap gap-2">
            <button type="submit" class="btn btn-primary">@textoBotonGuardar</button>
            <button type="button" class="btn btn-secondary" @onclick="BuscarPorId">Buscar por ID</button>
            <button type="button" class="btn btn-info" @onclick="BuscarPorNombre">Buscar por Nombre</button>
            <button type="button" class="btn btn-danger" @onclick="EliminarArchivo" disabled="@(!existeArchivo)">Eliminar</button>
        </div>
    </EditForm>

    <hr />

    @if (cargando)
    {
        <div class="text-center py-3">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-2 text-muted">Cargando archivos...</p>
        </div>
    }
    else if (listaArchivos.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No hay archivos disponibles.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Usuario</th>
                        <th>Nombre</th>
                        <th>Ruta</th>
                        <th>Tipo</th>
                        <th>Fecha</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var archivo in listaArchivos)
                    {
                        <tr>
                            <td>@archivo.Id</td>
                            <td class="fw-bold">@ObtenerNombreUsuario(archivo.IdUsuario)</td>
                            <td>@archivo.Nombre</td>
                            <td>@archivo.Ruta</td>
                            <td>@archivo.Tipo</td>
                            <td>@archivo.Fecha?.ToString("dd/MM/yyyy")</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                        @onclick="@(() => CargarEnFormulario(archivo))">
                                    <i class="bi bi-pencil"></i> Editar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="mt-3">
            <span class="badge bg-primary">Total: @listaArchivos.Count archivos</span>
        </div>
    }
}

@code {
    private List<Archivo> listaArchivos = new();
    private List<Usuario> listaUsuarios = new();

    [SupplyParameterFromForm]
    private Archivo archivoActual { get; set; } = new();

    private bool existeArchivo = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;
    private const string urlBaseApi = "api/archivo";

    protected override async Task OnAutenticacionVerificada()
    {
        await CargarArchivos();
        await CargarUsuarios();
        StateHasChanged();
    }

    private async Task CargarArchivos()
    {
        try
        {
            cargando = true;
            var respuesta = await servicioApi.ObtenerTodosAsync<Archivo>("archivo");
            listaArchivos = respuesta ?? new List<Archivo>();
            mensaje = $"Se cargaron {listaArchivos.Count} archivo(s).";
            claseAviso = "alert alert-success";
        }
        catch (Exception error)
        {
            mensaje = $"Error al listar archivos: {error.Message}";
            claseAviso = "alert alert-danger";
            listaArchivos = new List<Archivo>();
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task CargarUsuarios()
    {
        try
        {
            var respuesta = await servicioApi.ObtenerTodosAsync<Usuario>("usuario");
            listaUsuarios = respuesta ?? new List<Usuario>();
        }
        catch (Exception error)
        {
            mensaje = $"Error al cargar usuarios: {error.Message}";
            claseAviso = "alert alert-warning";
        }
    }

    private async Task BuscarPorId()
    {
        LimpiarMensajes();
        if (archivoActual.Id <= 0)
        {
            mensaje = "Debe indicar un ID válido para buscar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiArchivos");
            var ruta = $"{urlBaseApi}/id/{archivoActual.Id}";
            var respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<Archivo>>>(ruta);
            var encontrado = respuesta?.Datos?.FirstOrDefault();

            if (encontrado is not null)
            {
                archivoActual = new Archivo
                {
                    Id = encontrado.Id,
                    IdUsuario = encontrado.IdUsuario,
                    Nombre = encontrado.Nombre,
                    Ruta = encontrado.Ruta,
                    Tipo = encontrado.Tipo,
                    Fecha = encontrado.Fecha
                };
                existeArchivo = true;
                textoBotonGuardar = "Actualizar";
                mensaje = "Archivo cargado en el formulario.";
                claseAviso = "alert alert-success";
            }
            else
            {
                existeArchivo = false;
                textoBotonGuardar = "Crear";
                mensaje = "Archivo no encontrado.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            existeArchivo = false;
            textoBotonGuardar = "Crear";
            mensaje = $"Error al buscar archivo: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task BuscarPorNombre()
    {
        LimpiarMensajes();
        if (string.IsNullOrWhiteSpace(archivoActual.Nombre))
        {
            mensaje = "Debe indicar un nombre para buscar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiArchivos");
            var ruta = $"{urlBaseApi}/nombre/{Uri.EscapeDataString(archivoActual.Nombre.Trim())}";
            var respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<Archivo>>>(ruta);
            var encontrados = respuesta?.Datos ?? new List<Archivo>();

            if (encontrados.Any())
            {
                if (encontrados.Count == 1)
                {
                    // Si hay solo un resultado, cargarlo en el formulario
                    var encontrado = encontrados.First();
                    archivoActual = new Archivo
                    {
                        Id = encontrado.Id,
                        IdUsuario = encontrado.IdUsuario,
                        Nombre = encontrado.Nombre,
                        Ruta = encontrado.Ruta,
                        Tipo = encontrado.Tipo,
                        Fecha = encontrado.Fecha
                    };
                    existeArchivo = true;
                    textoBotonGuardar = "Actualizar";
                    mensaje = "Archivo encontrado y cargado en el formulario.";
                    claseAviso = "alert alert-success";
                }
                else
                {
                    // Si hay múltiples resultados, mostrar solo esos en la tabla
                    listaArchivos = encontrados;
                    mensaje = $"Se encontraron {encontrados.Count} archivos con el nombre '{archivoActual.Nombre}'.";
                    claseAviso = "alert alert-info";
                }
            }
            else
            {
                existeArchivo = false;
                textoBotonGuardar = "Crear";
                mensaje = "No se encontraron archivos con ese nombre.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            existeArchivo = false;
            textoBotonGuardar = "Crear";
            mensaje = $"Error al buscar archivo por nombre: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeArchivo)
            await ActualizarArchivo();
        else
            await CrearArchivo();
    }

    private async Task CrearArchivo()
    {
        LimpiarMensajes();
        try
        {
            var archivoParaCrear = new
            {
                IdUsuario = archivoActual.IdUsuario,
                Nombre = archivoActual.Nombre,
                Ruta = archivoActual.Ruta,
                Tipo = archivoActual.Tipo,
                Fecha = archivoActual.Fecha
            };

            if (Vacio(archivoParaCrear))
                return;

            var cliente = fabricaHttp.CreateClient("ApiArchivos");
            var respuesta = await cliente.PostAsJsonAsync(urlBaseApi, archivoParaCrear);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Archivo creado correctamente.";
                claseAviso = "alert alert-success";
                await CargarArchivos();
                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo crear el archivo. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al crear archivo: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarArchivo()
    {
        LimpiarMensajes();
        if (archivoActual.Id <= 0)
        {
            mensaje = "Debe indicar un ID válido para actualizar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var archivoParaActualizar = new
            {
                IdUsuario = archivoActual.IdUsuario,
                Nombre = archivoActual.Nombre,
                Ruta = archivoActual.Ruta,
                Tipo = archivoActual.Tipo,
                Fecha = archivoActual.Fecha
            };

            if (Vacio(archivoParaActualizar))
                return;

            var cliente = fabricaHttp.CreateClient("ApiArchivos");
            var ruta = $"{urlBaseApi}/id/{archivoActual.Id}";
            var respuesta = await cliente.PutAsJsonAsync(ruta, archivoParaActualizar);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Archivo actualizado correctamente.";
                claseAviso = "alert alert-success";
                await CargarArchivos();
                existeArchivo = true;
                textoBotonGuardar = "Actualizar";
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo actualizar el archivo. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al actualizar archivo: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task EliminarArchivo()
    {
        LimpiarMensajes();
        if (archivoActual.Id <= 0)
        {
            mensaje = "Debe indicar un ID válido para eliminar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiArchivos");
            var ruta = $"{urlBaseApi}/id/{archivoActual.Id}";
            var respuesta = await cliente.DeleteAsync(ruta);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Archivo eliminado correctamente.";
                claseAviso = "alert alert-success";
                await CargarArchivos();
                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo eliminar el archivo. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al eliminar archivo: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ProbarConexion()
    {
        LimpiarMensajes();
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiArchivos");
            var respuesta = await cliente.GetAsync(urlBaseApi);
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Conexión con la API verificada.";
                claseAviso = "alert alert-success";
            }
            else
            {
                mensaje = $"La API respondió con estado {(int)respuesta.StatusCode}.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error de conexión a la API: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(Archivo archivo)
    {
        archivoActual = new Archivo
        {
            Id = archivo.Id,
            IdUsuario = archivo.IdUsuario,
            Nombre = archivo.Nombre,
            Ruta = archivo.Ruta,
            Tipo = archivo.Tipo,
            Fecha = archivo.Fecha
        };
        existeArchivo = true;
        textoBotonGuardar = "Actualizar";
        mensaje = "Archivo seleccionado desde el listado.";
        claseAviso = "alert alert-info";
    }

    private string ObtenerNombreUsuario(int idUsuario)
    {
        var usuario = listaUsuarios.FirstOrDefault(u => u.Id == idUsuario);
        return usuario?.Email ?? "No encontrado";
    }

    private void LimpiarMensajes()
    {
        mensaje = "";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        archivoActual = new Archivo();
        existeArchivo = false;
        textoBotonGuardar = "Crear";
        LimpiarMensajes();
    }
    
    private bool Vacio(dynamic p)
    {
        if (p.IdUsuario <= 0)
        {
            mensaje = "Error: Debe seleccionar un usuario";
            claseAviso = "alert alert-warning";
            return true;
        }
        
        if (string.IsNullOrWhiteSpace(p.Nombre))
        {
            mensaje = "Error: El campo Nombre es obligatorio";
            claseAviso = "alert alert-warning";
            return true;
        }
        
        if (string.IsNullOrWhiteSpace(p.Ruta))
        {
            mensaje = "Error: El campo Ruta es obligatorio";
            claseAviso = "alert alert-warning";
            return true;
        }
        
        return false;
    }
}