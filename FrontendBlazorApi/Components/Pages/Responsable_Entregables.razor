@code {
private List<Responsable_Entregable> listaAsociaciones = new();
private List<Responsable> listaResponsables = new();
private List<Entregable> listaEntregables = new();


private Responsable_Entregable asociacionActual { get; set; } = new();
private bool existeAsociacion = false;
private string textoBotonGuardar = "Crear";
private string mensaje = "";
private string claseAviso = "alert alert-info";
private bool cargando = false;
private const string urlBaseApi = "api/responsable_entregable";

protected override async Task OnInitializedAsync()
{
    await CargarAsociaciones();
    await CargarResponsables();
    await CargarEntregables();
}

private async Task CargarAsociaciones()
{
    try
    {
        cargando = true;
        var cliente = fabricaHttp.CreateClient("ApiResponsable_Entregables");
        var respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<Responsable_Entregable>>>(urlBaseApi);
        listaAsociaciones = respuesta?.Datos ?? new List<Responsable_Entregable>();
        mensaje = $"Se cargaron {listaAsociaciones.Count} asociaciones.";
        claseAviso = "alert alert-success";
    }
    catch (Exception e)
    {
        mensaje = $"Error al listar asociaciones: {e.Message}";
        claseAviso = "alert alert-danger";
    }
    finally { cargando = false; }
}

private async Task CargarResponsables()
{
    try
    {
        var cliente = fabricaHttp.CreateClient("ApiResponsables");
        var respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<Responsable>>>("api/responsable");
        listaResponsables = respuesta?.Datos ?? new List<Responsable>();
    }
    catch (Exception e)
    {
        mensaje = $"Error al cargar responsables: {e.Message}";
        claseAviso = "alert alert-danger";
    }
}

private async Task CargarEntregables()
{
    try
    {
        var cliente = fabricaHttp.CreateClient("ApiEntregables");
        var respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<Entregable>>>("api/entregable");
        listaEntregables = respuesta?.Datos ?? new List<Entregable>();
    }
    catch (Exception e)
    {
        mensaje = $"Error al cargar entregables: {e.Message}";
        claseAviso = "alert alert-danger";
    }
}

private string ObtenerNombreResponsable(int id) =>
    listaResponsables.FirstOrDefault(r => r.Id == id)?.Nombre ?? "No encontrado";

private string ObtenerNombreEntregable(int id) =>
    listaEntregables.FirstOrDefault(e => e.Id == id)?.Titulo ?? "No encontrado";

private async Task BuscarPorId()
{
    LimpiarMensajes();
    if (asociacionActual.IdResponsable <= 0 || asociacionActual.IdEntregable <= 0)
    {
        mensaje = "Debe indicar IdResponsable y IdEntregable válidos.";
        claseAviso = "alert alert-warning";
        return;
    }

    try
    {
        var cliente = fabricaHttp.CreateClient("ApiResponsable_Entregables");
        var ruta = $"{urlBaseApi}/id/{asociacionActual.IdResponsable}/{asociacionActual.IdEntregable}";
        var respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<Responsable_Entregable>>>(ruta);
        var encontrada = respuesta?.Datos?.FirstOrDefault();

        if (encontrada is not null)
        {
            asociacionActual = encontrada;
            existeAsociacion = true;
            textoBotonGuardar = "Actualizar";
            mensaje = "Asociación encontrada.";
            claseAviso = "alert alert-success";
        }
        else
        {
            mensaje = "No se encontró la asociación.";
            claseAviso = "alert alert-warning";
        }
    }
    catch (Exception e)
    {
        mensaje = $"Error al buscar: {e.Message}";
        claseAviso = "alert alert-danger";
    }
}

private async Task GuardarSegunEstado()
{
    if (existeAsociacion)
        await ActualizarAsociacion();
    else
        await CrearAsociacion();
}

private async Task CrearAsociacion()
{
    LimpiarMensajes();
    try
    {
        var cliente = fabricaHttp.CreateClient("ApiResponsable_Entregables");
        var respuesta = await cliente.PostAsJsonAsync(urlBaseApi, asociacionActual);
        if (respuesta.IsSuccessStatusCode)
        {
            mensaje = "Asociación creada correctamente.";
            claseAviso = "alert alert-success";
            await CargarAsociaciones();
            LimpiarFormulario();
        }
        else
        {
            mensaje = $"Error al crear: {await respuesta.Content.ReadAsStringAsync()}";
            claseAviso = "alert alert-danger";
        }
    }
    catch (Exception e)
    {
        mensaje = $"Error al crear: {e.Message}";
        claseAviso = "alert alert-danger";
    }
}

private async Task ActualizarAsociacion()
{
    LimpiarMensajes();
    try
    {
        var cliente = fabricaHttp.CreateClient("ApiResponsable_Entregables");
        var ruta = $"{urlBaseApi}/id/{asociacionActual.IdResponsable}/{asociacionActual.IdEntregable}";
        var respuesta = await cliente.PutAsJsonAsync(ruta, asociacionActual);
        if (respuesta.IsSuccessStatusCode)
        {
            mensaje = "Asociación actualizada correctamente.";
            claseAviso = "alert alert-success";
            await CargarAsociaciones();
        }
        else
        {
            mensaje = $"Error al actualizar: {await respuesta.Content.ReadAsStringAsync()}";
            claseAviso = "alert alert-danger";
        }
    }
    catch (Exception e)
    {
        mensaje = $"Error al actualizar: {e.Message}";
        claseAviso = "alert alert-danger";
    }
}

private async Task EliminarAsociacion()
{
    LimpiarMensajes();
    if (asociacionActual.IdResponsable <= 0 || asociacionActual.IdEntregable <= 0)
    {
        mensaje = "Debe seleccionar un Responsable y un Entregable válidos.";
        claseAviso = "alert alert-warning";
        return;
    }

    try
    {
        var cliente = fabricaHttp.CreateClient("ApiResponsable_Entregables");
        var ruta = $"{urlBaseApi}/id/{asociacionActual.IdResponsable}/{asociacionActual.IdEntregable}";
        var respuesta = await cliente.DeleteAsync(ruta);
        if (respuesta.IsSuccessStatusCode)
        {
            mensaje = "Asociación eliminada correctamente.";
            claseAviso = "alert alert-success";
            await CargarAsociaciones();
            LimpiarFormulario();
        }
        else
        {
            mensaje = $"Error al eliminar: {await respuesta.Content.ReadAsStringAsync()}";
            claseAviso = "alert alert-danger";
        }
    }
    catch (Exception e)
    {
        mensaje = $"Error al eliminar: {e.Message}";
        claseAviso = "alert alert-danger";
    }
}

private async Task ProbarConexion()
{
    LimpiarMensajes();
    try
    {
        var cliente = fabricaHttp.CreateClient("ApiResponsable_Entregables");
        var respuesta = await cliente.GetAsync(urlBaseApi);
        if (respuesta.IsSuccessStatusCode)
        {
            mensaje = "Conexión con la API verificada.";
            claseAviso = "alert alert-success";
        }
        else
        {
            mensaje = $"API respondió con estado {(int)respuesta.StatusCode}.";
            claseAviso = "alert alert-warning";
        }
    }
    catch (Exception e)
    {
        mensaje = $"Error de conexión: {e.Message}";
        claseAviso = "alert alert-danger";
    }
}

private void CargarEnFormulario(Responsable_Entregable a)
{
    asociacionActual = a;
    existeAsociacion = true;
    textoBotonGuardar = "Actualizar";
    mensaje = "Asociación cargada en el formulario.";
    claseAviso = "alert alert-info";
}

private void LimpiarFormulario()
{
    asociacionActual = new Responsable_Entregable();
    existeAsociacion = false;
    textoBotonGuardar = "Crear";
    LimpiarMensajes();
}

private void LimpiarMensajes()
{
    mensaje = "";
    claseAviso = "alert alert-info";
}


}
