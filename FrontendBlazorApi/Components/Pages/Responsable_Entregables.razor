@page "/responsable_entregables"

@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@using FrontendBlazorApi.Servicios
@using FrontendBlazorApi.Components
@inject IHttpClientFactory fabricaHttp
@inject ServicioApiGenerico servicioApi
@inherits PaginaAutenticada
@rendermode InteractiveServer

<PageTitle>Gestión Responsable ↔ Entregable</PageTitle>

@if (!AutenticacionVerificada)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-2 text-muted">Verificando autenticación...</p>
    </div>
}
else
{
    <h3>Asociación Responsable ↔ Entregable</h3>

    <div class="mb-3 d-flex gap-2">
        <button type="button" class="btn btn-outline-primary" @onclick="CargarAsociaciones">Mostrar todas</button>
        <button type="button" class="btn btn-outline-dark" @onclick="LimpiarFormulario">Limpiar</button>
    </div>

    @if (!string.IsNullOrWhiteSpace(mensaje))
    {
        <div class="@claseAviso" role="alert">@mensaje</div>
    }

    <h4>Formulario de Asociación Responsable - Entregable</h4>
    <EditForm Model="asociacionActual" OnValidSubmit="GuardarSegunEstado" FormName="ResponsableEntregableForm">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Responsable</label>
                <select class="form-control" @bind="asociacionActual.IdResponsable">
                    <option value="0">Seleccione un responsable</option>
                    @foreach (var responsable in listaResponsables)
                    {
                        <option value="@responsable.Id">@responsable.Nombre (ID: @responsable.Id)</option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Entregable</label>
                <select class="form-control" @bind="asociacionActual.IdEntregable">
                    <option value="0">Seleccione un entregable</option>
                    @foreach (var entregable in listaEntregables)
                    {
                        <option value="@entregable.Id">@entregable.Titulo (ID: @entregable.Id)</option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Fecha de Asociación</label>
                <InputDate class="form-control" @bind-Value="asociacionActual.FechaAsociacion" />
            </div>
        </div>
        <div class="mt-3 d-flex flex-wrap gap-2">
            <button type="submit" class="btn btn-primary">@textoBotonGuardar</button>
            <button type="button" class="btn btn-secondary" @onclick="BuscarPorIds">Buscar</button>
            <button type="button" class="btn btn-danger" @onclick="EliminarAsociacion" disabled="@(!existeAsociacion)">Eliminar</button>
        </div>
    </EditForm>

    <hr />

    @if (cargando)
    {
        <div class="text-center py-3">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-2 text-muted">Cargando asociaciones...</p>
        </div>
    }
    else if (listaAsociaciones.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No hay asociaciones disponibles.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Responsable</th>
                        <th>Entregable</th>
                        <th>Fecha de Asociación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in listaAsociaciones)
                    {
                        <tr>
                            <td class="fw-bold">@ObtenerNombreResponsable(a.IdResponsable)</td>
                            <td>@ObtenerNombreEntregable(a.IdEntregable)</td>
                            <td>@a.FechaAsociacion?.ToString("dd/MM/yyyy")</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                        @onclick="@(() => CargarEnFormulario(a))">
                                    <i class="bi bi-pencil"></i> Editar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="mt-3">
            <span class="badge bg-primary">Total: @listaAsociaciones.Count asociaciones</span>
        </div>
    }
}

@code {
    private List<Responsable_Entregable> listaAsociaciones = new();
    private List<Responsable> listaResponsables = new();
    private List<Entregable> listaEntregables = new();

    [SupplyParameterFromForm]
    private Responsable_Entregable asociacionActual { get; set; } = new();
    
    private bool existeAsociacion = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;
    private const string urlBaseApi = "api/responsable_entregable";

    protected override async Task OnAutenticacionVerificada()
    {
        await CargarAsociaciones();
        await CargarResponsables();
        await CargarEntregables();
        StateHasChanged();
    }

    private async Task CargarAsociaciones()
    {
        try
        {
            cargando = true;
            var respuesta = await servicioApi.ObtenerTodosAsync<Responsable_Entregable>("responsable_entregable");
            listaAsociaciones = respuesta ?? new List<Responsable_Entregable>();
            mensaje = $"Se cargaron {listaAsociaciones.Count} asociaciones.";
            claseAviso = "alert alert-success";
        }
        catch (Exception error)
        {
            mensaje = $"Error al listar asociaciones: {error.Message}";
            claseAviso = "alert alert-danger";
            listaAsociaciones = new List<Responsable_Entregable>();
        }
        finally 
        { 
            cargando = false; 
        }
    }

    private async Task CargarResponsables()
    {
        try
        {
            var respuesta = await servicioApi.ObtenerTodosAsync<Responsable>("responsable");
            listaResponsables = respuesta ?? new List<Responsable>();
        }
        catch (Exception error)
        {
            mensaje = $"Error al cargar responsables: {error.Message}";
            claseAviso = "alert alert-warning";
        }
    }

    private async Task CargarEntregables()
    {
        try
        {
            var respuesta = await servicioApi.ObtenerTodosAsync<Entregable>("entregable");
            listaEntregables = respuesta ?? new List<Entregable>();
        }
        catch (Exception error)
        {
            mensaje = $"Error al cargar entregables: {error.Message}";
            claseAviso = "alert alert-warning";
        }
    }

    private async Task BuscarPorIds()
    {
        LimpiarMensajes();
        if (asociacionActual.IdResponsable <= 0 || asociacionActual.IdEntregable <= 0)
        {
            mensaje = "Debe seleccionar un Responsable y un Entregable válidos para buscar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiResponsable_Entregables");
            var ruta = $"{urlBaseApi}/id/{asociacionActual.IdResponsable}/{asociacionActual.IdEntregable}";
            var respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<Responsable_Entregable>>>(ruta);
            var encontrada = respuesta?.Datos?.FirstOrDefault();

            if (encontrada is not null)
            {
                asociacionActual = new Responsable_Entregable
                {
                    IdResponsable = encontrada.IdResponsable,
                    IdEntregable = encontrada.IdEntregable,
                    FechaAsociacion = encontrada.FechaAsociacion
                };
                existeAsociacion = true;
                textoBotonGuardar = "Actualizar";
                mensaje = "Asociación encontrada y cargada en el formulario.";
                claseAviso = "alert alert-success";
            }
            else
            {
                existeAsociacion = false;
                textoBotonGuardar = "Crear";
                mensaje = "No se encontró la asociación.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            existeAsociacion = false;
            textoBotonGuardar = "Crear";
            mensaje = $"Error al buscar asociación: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeAsociacion)
            await ActualizarAsociacion();
        else
            await CrearAsociacion();
    }

    private async Task CrearAsociacion()
    {
        LimpiarMensajes();
        try
        {
            var asociacionParaCrear = new
            {
                IdResponsable = asociacionActual.IdResponsable,
                IdEntregable = asociacionActual.IdEntregable,
                FechaAsociacion = asociacionActual.FechaAsociacion
            };

            if (Vacio(asociacionParaCrear))
                return;

            var cliente = fabricaHttp.CreateClient("ApiResponsable_Entregables");
            var respuesta = await cliente.PostAsJsonAsync(urlBaseApi, asociacionParaCrear);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Asociación creada correctamente.";
                claseAviso = "alert alert-success";
                await CargarAsociaciones();
                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo crear la asociación. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al crear asociación: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarAsociacion()
    {
        LimpiarMensajes();
        if (asociacionActual.IdResponsable <= 0 || asociacionActual.IdEntregable <= 0)
        {
            mensaje = "Debe seleccionar un Responsable y un Entregable válidos para actualizar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var asociacionParaActualizar = new
            {
                IdResponsable = asociacionActual.IdResponsable,
                IdEntregable = asociacionActual.IdEntregable,
                FechaAsociacion = asociacionActual.FechaAsociacion
            };

            if (Vacio(asociacionParaActualizar, true))
                return;

            var cliente = fabricaHttp.CreateClient("ApiResponsable_Entregables");
            var ruta = $"{urlBaseApi}/id/{asociacionActual.IdResponsable}/{asociacionActual.IdEntregable}";
            var respuesta = await cliente.PutAsJsonAsync(ruta, asociacionParaActualizar);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Asociación actualizada correctamente.";
                claseAviso = "alert alert-success";
                await CargarAsociaciones();
                existeAsociacion = true;
                textoBotonGuardar = "Actualizar";
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo actualizar la asociación. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al actualizar asociación: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task EliminarAsociacion()
    {
        LimpiarMensajes();
        if (asociacionActual.IdResponsable <= 0 || asociacionActual.IdEntregable <= 0)
        {
            mensaje = "Debe seleccionar un Responsable y un Entregable válidos para eliminar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiResponsable_Entregables");
            var ruta = $"{urlBaseApi}/id/{asociacionActual.IdResponsable}/{asociacionActual.IdEntregable}";
            var respuesta = await cliente.DeleteAsync(ruta);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Asociación eliminada correctamente.";
                claseAviso = "alert alert-success";
                await CargarAsociaciones();
                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo eliminar la asociación. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al eliminar asociación: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ProbarConexion()
    {
        LimpiarMensajes();
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiResponsable_Entregables");
            var respuesta = await cliente.GetAsync(urlBaseApi);
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Conexión con la API verificada.";
                claseAviso = "alert alert-success";
            }
            else
            {
                mensaje = $"La API respondió con estado {(int)respuesta.StatusCode}.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error de conexión a la API: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(Responsable_Entregable a)
    {
        asociacionActual = new Responsable_Entregable
        {
            IdResponsable = a.IdResponsable,
            IdEntregable = a.IdEntregable,
            FechaAsociacion = a.FechaAsociacion
        };
        existeAsociacion = true;
        textoBotonGuardar = "Actualizar";
        mensaje = "Asociación seleccionada desde el listado.";
        claseAviso = "alert alert-info";
    }

    private string ObtenerNombreResponsable(int id) =>
        listaResponsables.FirstOrDefault(r => r.Id == id)?.Nombre ?? "No encontrado";

    private string ObtenerNombreEntregable(int id) =>
        listaEntregables.FirstOrDefault(e => e.Id == id)?.Titulo ?? "No encontrado";

    private void LimpiarFormulario()
    {
        asociacionActual = new Responsable_Entregable();
        existeAsociacion = false;
        textoBotonGuardar = "Crear";
        LimpiarMensajes();
    }

    private void LimpiarMensajes()
    {
        mensaje = "";
        claseAviso = "alert alert-info";
    }
    
    private bool Vacio(dynamic p, bool esActualizacion = false)
    {
        if (p.IdResponsable <= 0)
        {
            mensaje = "Error: Debe seleccionar un responsable";
            claseAviso = "alert alert-warning";
            return true;
        }
        
        if (p.IdEntregable <= 0)
        {
            mensaje = "Error: Debe seleccionar un entregable";
            claseAviso = "alert alert-warning";
            return true;
        }
        
        // Validar que no exista ya la asociación (solo para creación)
        if (!esActualizacion && listaAsociaciones.Any(a => a.IdResponsable == p.IdResponsable && a.IdEntregable == p.IdEntregable))
        {
            mensaje = "Error: Ya existe una asociación entre este responsable y este entregable";
            claseAviso = "alert alert-warning";
            return true;
        }
        
        return false;
    }
}