@page "/meta-proyectos"
@page "/meta_proyectos"

@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@using FrontendBlazorApi.Servicios
@using FrontendBlazorApi.Components
@inject IHttpClientFactory fabricaHttp
@inject ServicioApiGenerico servicioApi
@inherits PaginaAutenticada
@rendermode InteractiveServer

<PageTitle>Meta - Proyectos</PageTitle>

@if (!AutenticacionVerificada)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-2 text-muted">Verificando autenticación...</p>
    </div>
}
else
{
    <h3>Gestión de Asociación Meta - Proyecto</h3>

    <div class="mb-3 d-flex gap-2">
        <button type="button" class="btn btn-outline-primary" @onclick="CargarMetaProyectos">Mostrar todos</button>
        <button type="button" class="btn btn-outline-dark" @onclick="LimpiarFormulario">Limpiar</button>
    </div>

    @if (!string.IsNullOrWhiteSpace(mensaje))
    {
        <div class="@claseAviso" role="alert">@mensaje</div>
    }

    <h4>Formulario de Asociación Meta - Proyecto</h4>
    <EditForm Model="metaProyectoActual" OnValidSubmit="GuardarSegunEstado" FormName="MetaProyectoForm">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Meta Estratégica</label>
                <select class="form-control" @bind="metaProyectoActual.IdMeta">
                    <option value="0">Seleccione una meta estratégica</option>
                    @foreach (var m in listaMetasEstrategicas)
                    {
                        <option value="@m.Id">@m.Titulo</option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Proyecto</label>
                <select class="form-control" @bind="metaProyectoActual.IdProyecto">
                    <option value="0">Seleccione un proyecto</option>
                    @foreach (var p in listaProyectos)
                    {
                        <option value="@p.Id">@p.Titulo</option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Fecha de asociación</label>
                <InputDate class="form-control" @bind-Value="metaProyectoActual.FechaAsociacion" />
            </div>
        </div>
        <div class="mt-3 d-flex flex-wrap gap-2">
            <button type="submit" class="btn btn-primary">@textoBotonGuardar</button>
            <button type="button" class="btn btn-secondary" @onclick="BuscarPorIds">Buscar</button>
            <button type="button" class="btn btn-danger" @onclick="EliminarMetaProyecto" disabled="@(!existeMetaProyecto)">Eliminar</button>
        </div>
    </EditForm>

    <hr />

    @if (cargando)
    {
        <div class="text-center py-3">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-2 text-muted">Cargando asociaciones Meta-Proyecto...</p>
        </div>
    }
    else if (listaMetaProyectos.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No hay asociaciones disponibles.
        </div>
    }
    else
    {
        <div class="table-responsive">
             <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Meta Estratégica</th>
                        <th>Proyecto</th>
                        <th>Fecha Asociación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mp in listaMetaProyectos)
                    {
                        <tr>
                            <td class="fw-bold">@ObtenerNombreMeta(mp.IdMeta)</td>
                            <td>@ObtenerNombreProyecto(mp.IdProyecto)</td>
                            <td>@(mp.FechaAsociacion?.ToString("dd/MM/yyyy") ?? "-")</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                        @onclick="@(() => CargarEnFormulario(mp))">
                                    <i class="bi bi-pencil"></i> Editar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="mt-3">
            <span class="badge bg-primary">Total: @listaMetaProyectos.Count asociaciones</span>
        </div>
    }
}

@code {
    private List<Meta_Proyecto> listaMetaProyectos = new();
    private List<MetaEstrategica> listaMetasEstrategicas = new();
    private List<Proyecto> listaProyectos = new();

    [SupplyParameterFromForm]
    private Meta_Proyecto metaProyectoActual { get; set; } = new();

    private bool existeMetaProyecto = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;
    private const string urlBaseApi = "api/metaproyecto";

    protected override async Task OnAutenticacionVerificada()
    {
        await CargarMetaProyectos();
        await CargarMetasEstrategicas();
        await CargarProyectos();
        StateHasChanged();
    }

    private async Task CargarMetaProyectos()
    {
        try
        {
            cargando = true;
            var respuesta = await servicioApi.ObtenerTodosAsync<Meta_Proyecto>("metaproyecto");
            listaMetaProyectos = respuesta ?? new List<Meta_Proyecto>();
            mensaje = $"Se cargaron {listaMetaProyectos.Count} asociación(es).";
            claseAviso = "alert alert-success";
        }
        catch (Exception error)
        {
            mensaje = $"Error al listar asociaciones: {error.Message}";
            claseAviso = "alert alert-danger";
            listaMetaProyectos = new List<Meta_Proyecto>();
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task CargarMetasEstrategicas()
    {
        try
        {
            var respuesta = await servicioApi.ObtenerTodosAsync<MetaEstrategica>("metaestrategica");
            listaMetasEstrategicas = respuesta ?? new List<MetaEstrategica>();
        }
        catch (Exception error)
        {
            mensaje = $"Error al cargar metas estratégicas: {error.Message}";
            claseAviso = "alert alert-warning";
        }
    }

    private async Task CargarProyectos()
    {
        try
        {
            var respuesta = await servicioApi.ObtenerTodosAsync<Proyecto>("proyecto");
            listaProyectos = respuesta ?? new List<Proyecto>();
        }
        catch (Exception error)
        {
            mensaje = $"Error al cargar proyectos: {error.Message}";
            claseAviso = "alert alert-warning";
        }
    }

    private async Task BuscarPorIds()
    {
        LimpiarMensajes();
        if (metaProyectoActual.IdMeta <= 0 || metaProyectoActual.IdProyecto <= 0)
        {
            mensaje = "Debe indicar IdMeta e IdProyecto válidos para buscar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiMetaProyectos");
            var ruta = $"{urlBaseApi}/idmeta/{metaProyectoActual.IdMeta}/idproyecto/{metaProyectoActual.IdProyecto}";
            var respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<Meta_Proyecto>>>(ruta);
            var encontrado = respuesta?.Datos?.FirstOrDefault();

            if (encontrado is not null)
            {
                metaProyectoActual = new Meta_Proyecto
                {
                    IdMeta = encontrado.IdMeta,
                    IdProyecto = encontrado.IdProyecto,
                    FechaAsociacion = encontrado.FechaAsociacion
                };
                existeMetaProyecto = true;
                textoBotonGuardar = "Actualizar";
                mensaje = "Asociación cargada en el formulario.";
                claseAviso = "alert alert-success";
            }
            else
            {
                existeMetaProyecto = false;
                textoBotonGuardar = "Crear";
                mensaje = "Asociación no encontrada.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            existeMetaProyecto = false;
            textoBotonGuardar = "Crear";
            mensaje = $"Error al buscar asociación: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeMetaProyecto)
            await ActualizarMetaProyecto();
        else
            await CrearMetaProyecto();
    }

    private async Task CrearMetaProyecto()
    {
        LimpiarMensajes();
        try
        {
            var metaProyectoParaCrear = new
            {
                IdMeta = metaProyectoActual.IdMeta,
                IdProyecto = metaProyectoActual.IdProyecto,
                FechaAsociacion = metaProyectoActual.FechaAsociacion
            };

            if (Vacio(metaProyectoParaCrear))
                return;

            var cliente = fabricaHttp.CreateClient("ApiMetaProyectos");
            var respuesta = await cliente.PostAsJsonAsync(urlBaseApi, metaProyectoParaCrear);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Asociación creada correctamente.";
                claseAviso = "alert alert-success";
                await CargarMetaProyectos();
                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo crear la asociación. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al crear asociación: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarMetaProyecto()
    {
        LimpiarMensajes();
        if (metaProyectoActual.IdMeta <= 0 || metaProyectoActual.IdProyecto <= 0)
        {
            mensaje = "Debe indicar IdMeta e IdProyecto válidos para actualizar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var metaProyectoParaActualizar = new
            {
                IdMeta = metaProyectoActual.IdMeta,
                IdProyecto = metaProyectoActual.IdProyecto,
                FechaAsociacion = metaProyectoActual.FechaAsociacion
            };

            if (Vacio(metaProyectoParaActualizar, true))
                return;

            var cliente = fabricaHttp.CreateClient("ApiMetaProyectos");
            var ruta = $"{urlBaseApi}/idmeta/{metaProyectoActual.IdMeta}/idproyecto/{metaProyectoActual.IdProyecto}";
            var respuesta = await cliente.PutAsJsonAsync(ruta, metaProyectoParaActualizar);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Asociación actualizada correctamente.";
                claseAviso = "alert alert-success";
                await CargarMetaProyectos();
                existeMetaProyecto = true;
                textoBotonGuardar = "Actualizar";
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo actualizar la asociación. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al actualizar asociación: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task EliminarMetaProyecto()
    {
        LimpiarMensajes();
        if (metaProyectoActual.IdMeta <= 0 || metaProyectoActual.IdProyecto <= 0)
        {
            mensaje = "Debe indicar IdMeta e IdProyecto válidos para eliminar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiMetaProyectos");
            var ruta = $"{urlBaseApi}/idmeta/{metaProyectoActual.IdMeta}/idproyecto/{metaProyectoActual.IdProyecto}";
            var respuesta = await cliente.DeleteAsync(ruta);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Asociación eliminada correctamente.";
                claseAviso = "alert alert-success";
                await CargarMetaProyectos();
                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo eliminar la asociación. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al eliminar asociación: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ProbarConexion()
    {
        LimpiarMensajes();
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiMetaProyectos");
            var respuesta = await cliente.GetAsync(urlBaseApi);
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Conexión con la API verificada.";
                claseAviso = "alert alert-success";
            }
            else
            {
                mensaje = $"La API respondió con estado {(int)respuesta.StatusCode}.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error de conexión a la API: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(Meta_Proyecto mp)
    {
        metaProyectoActual = new Meta_Proyecto
        {
            IdMeta = mp.IdMeta,
            IdProyecto = mp.IdProyecto,
            FechaAsociacion = mp.FechaAsociacion
        };
        existeMetaProyecto = true;
        textoBotonGuardar = "Actualizar";
        mensaje = "Asociación seleccionada desde el listado.";
        claseAviso = "alert alert-info";
    }

    private string ObtenerNombreMeta(int idMeta)
    {
        var meta = listaMetasEstrategicas.FirstOrDefault(m => m.Id == idMeta);
        return meta?.Titulo ?? "No encontrada";
    }

    private string ObtenerNombreProyecto(int idProyecto)
    {
        var proyecto = listaProyectos.FirstOrDefault(p => p.Id == idProyecto);
        return proyecto?.Titulo ?? "No encontrado";
    }

    private void LimpiarMensajes()
    {
        mensaje = "";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        metaProyectoActual = new Meta_Proyecto();
        existeMetaProyecto = false;
        textoBotonGuardar = "Crear";
        LimpiarMensajes();
    }
    
    private bool Vacio(dynamic p, bool esActualizacion = false)
    {
        if (p.IdMeta <= 0)
        {
            mensaje = "Error: Debe seleccionar una meta estratégica";
            claseAviso = "alert alert-warning";
            return true;
        }
        
        if (p.IdProyecto <= 0)
        {
            mensaje = "Error: Debe seleccionar un proyecto";
            claseAviso = "alert alert-warning";
            return true;
        }
        
        // Validar que no exista ya la asociación (solo para creación)
        if (!esActualizacion && listaMetaProyectos.Any(mp => mp.IdMeta == p.IdMeta && mp.IdProyecto == p.IdProyecto))
        {
            mensaje = "Error: Ya existe una asociación entre esta meta y este proyecto";
            claseAviso = "alert alert-warning";
            return true;
        }
        
        return false;
    }
}