@page "/estado_proyectos"

@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@using FrontendBlazorApi.Servicios
@using FrontendBlazorApi.Components
@inject IHttpClientFactory fabricaHttp
@inject ServicioApiGenerico servicioApi
@inherits PaginaAutenticada
@rendermode InteractiveServer

<PageTitle>Estado de Proyectos</PageTitle>

@if (!AutenticacionVerificada)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-2 text-muted">Verificando autenticación...</p>
    </div>
}
else
{
    <h3>Gestión de Estado de Proyectos</h3>

    <div class="mb-3 d-flex gap-2">
        <button type="button" class="btn btn-outline-primary" @onclick="CargarEstadosProyectos">Mostrar todos</button>
        <button type="button" class="btn btn-outline-dark" @onclick="LimpiarFormulario">Limpiar</button>
    </div>

    @if (!string.IsNullOrWhiteSpace(mensaje))
    {
        <div class="@claseAviso" role="alert">@mensaje</div>
    }

    <h4>Formulario de Estado de Proyecto</h4>
    <EditForm Model="estadoProyectoActual" OnValidSubmit="GuardarSegunEstado" FormName="EstadoProyectoForm">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Proyecto</label>
                <select class="form-control" @bind="estadoProyectoActual.IdProyecto">
                    <option value="0">Seleccione un proyecto</option>
                    @foreach (var proyecto in listaProyectos)
                    {
                        <option value="@proyecto.Id">@proyecto.Titulo</option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Estado</label>
                <select class="form-control" @bind="estadoProyectoActual.IdEstado">
                    <option value="0">Seleccione un estado</option>
                    @foreach (var estado in listaEstados)
                    {
                        <option value="@estado.Id">@estado.Nombre</option>
                    }
                </select>
            </div>
        </div>
        <div class="mt-3 d-flex flex-wrap gap-2">
            <button type="submit" class="btn btn-primary">@textoBotonGuardar</button>
            <button type="button" class="btn btn-secondary" @onclick="BuscarPorProyecto">Buscar por Proyecto</button>
            <button type="button" class="btn btn-danger" @onclick="EliminarEstadoProyecto" disabled="@(!existeEstadoProyecto)">Eliminar</button>
        </div>
    </EditForm>

    <hr />

    @if (cargando)
    {
        <div class="text-center py-3">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-2 text-muted">Cargando estados de proyectos...</p>
        </div>
    }
    else if (listaEstadosProyectos.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No hay registros disponibles.
        </div>
    }
    else
    {
        <div class="table-responsive">
             <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Proyecto</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ep in listaEstadosProyectos)
                    {
                        <tr>
                            <td class="fw-bold">@ObtenerNombreProyecto(ep.IdProyecto)</td>
                            <td>@ObtenerNombreEstado(ep.IdEstado)</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                        @onclick="@(() => CargarEnFormulario(ep))">
                                    <i class="bi bi-pencil"></i> Editar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="mt-3">
            <span class="badge bg-primary">Total: @listaEstadosProyectos.Count registros</span>
        </div>
    }
}

@code {
    private List<Estado_Proyecto> listaEstadosProyectos = new();
    private List<Proyecto> listaProyectos = new();
    private List<Estado> listaEstados = new();

    [SupplyParameterFromForm]
    private Estado_Proyecto estadoProyectoActual { get; set; } = new();

    private bool existeEstadoProyecto = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;
    private const string urlBaseApi = "api/estado_proyecto";

    protected override async Task OnAutenticacionVerificada()
    {
        await CargarEstadosProyectos();
        await CargarProyectos();
        await CargarEstados();
        StateHasChanged();
    }

    private async Task CargarEstadosProyectos()
    {
        try
        {
            cargando = true;
            var respuesta = await servicioApi.ObtenerTodosAsync<Estado_Proyecto>("estado_proyecto");
            listaEstadosProyectos = respuesta ?? new List<Estado_Proyecto>();
            mensaje = $"Se cargaron {listaEstadosProyectos.Count} estado(s) de proyecto.";
            claseAviso = "alert alert-success";
        }
        catch (Exception error)
        {
            mensaje = $"Error al listar estados de proyectos: {error.Message}";
            claseAviso = "alert alert-danger";
            listaEstadosProyectos = new List<Estado_Proyecto>();
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task CargarProyectos()
    {
        try
        {
            var respuesta = await servicioApi.ObtenerTodosAsync<Proyecto>("proyecto");
            listaProyectos = respuesta ?? new List<Proyecto>();
        }
        catch (Exception error)
        {
            mensaje = $"Error al cargar proyectos: {error.Message}";
            claseAviso = "alert alert-warning";
        }
    }

    private async Task CargarEstados()
    {
        try
        {
            var respuesta = await servicioApi.ObtenerTodosAsync<Estado>("estado");
            listaEstados = respuesta ?? new List<Estado>();
        }
        catch (Exception error)
        {
            mensaje = $"Error al cargar estados: {error.Message}";
            claseAviso = "alert alert-warning";
        }
    }

    private async Task BuscarPorProyecto()
    {
        LimpiarMensajes();
        if (estadoProyectoActual.IdProyecto <= 0)
        {
            mensaje = "Debe seleccionar un proyecto para buscar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiEstado_Proyectos");
            var ruta = $"{urlBaseApi}/proyecto/{estadoProyectoActual.IdProyecto}";
            var respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<Estado_Proyecto>>>(ruta);
            var encontrado = respuesta?.Datos?.FirstOrDefault();

            if (encontrado is not null)
            {
                estadoProyectoActual = new Estado_Proyecto
                {
                    IdProyecto = encontrado.IdProyecto,
                    IdEstado = encontrado.IdEstado
                };
                existeEstadoProyecto = true;
                textoBotonGuardar = "Actualizar";
                mensaje = "Estado del proyecto cargado en el formulario.";
                claseAviso = "alert alert-success";
            }
            else
            {
                existeEstadoProyecto = false;
                textoBotonGuardar = "Crear";
                mensaje = "No se encontró un estado para este proyecto.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            existeEstadoProyecto = false;
            textoBotonGuardar = "Crear";
            mensaje = $"Error al buscar estado del proyecto: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeEstadoProyecto)
            await ActualizarEstadoProyecto();
        else
            await CrearEstadoProyecto();
    }

    private async Task CrearEstadoProyecto()
    {
        LimpiarMensajes();
        try
        {
            // Usar los nombres exactos que espera la API (con mayúsculas según la BD)
            var estadoProyectoParaCrear = new
            {
                IdProyecto = estadoProyectoActual.IdProyecto,
                IdEstado = estadoProyectoActual.IdEstado
            };

            if (Vacio(estadoProyectoParaCrear))
                return;

            var cliente = fabricaHttp.CreateClient("ApiEstado_Proyectos");
            var respuesta = await cliente.PostAsJsonAsync(urlBaseApi, estadoProyectoParaCrear);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Estado de proyecto creado correctamente.";
                claseAviso = "alert alert-success";
                await CargarEstadosProyectos();
                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo crear el estado de proyecto. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al crear estado de proyecto: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarEstadoProyecto()
    {
        LimpiarMensajes();
        if (estadoProyectoActual.IdProyecto <= 0)
        {
            mensaje = "Debe seleccionar un proyecto válido para actualizar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            // Usar los nombres exactos que espera la API (con mayúsculas según la BD)
            var estadoProyectoParaActualizar = new
            {
                IdProyecto = estadoProyectoActual.IdProyecto,
                IdEstado = estadoProyectoActual.IdEstado
            };



            var cliente = fabricaHttp.CreateClient("ApiEstado_Proyectos");
            
            // La URL también debe usar el nombre correcto (IdProyecto en lugar de proyecto)
            var ruta = $"{urlBaseApi}/IdProyecto/{estadoProyectoActual.IdProyecto}";
            
            var respuesta = await cliente.PutAsJsonAsync(ruta, estadoProyectoParaActualizar);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Estado de proyecto actualizado correctamente.";
                claseAviso = "alert alert-success";
                await CargarEstadosProyectos();
                existeEstadoProyecto = true;
                textoBotonGuardar = "Actualizar";
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo actualizar el estado de proyecto. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al actualizar estado de proyecto: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task EliminarEstadoProyecto()
    {
        LimpiarMensajes();
        if (estadoProyectoActual.IdProyecto <= 0)
        {
            mensaje = "Debe seleccionar un proyecto válido para eliminar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiEstado_Proyectos");
            // La URL también debe usar el nombre correcto (IdProyecto en lugar de proyecto)
            var ruta = $"{urlBaseApi}/IdProyecto/{estadoProyectoActual.IdProyecto}";
            var respuesta = await cliente.DeleteAsync(ruta);
            
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Estado de proyecto eliminado correctamente.";
                claseAviso = "alert alert-success";
                await CargarEstadosProyectos();
                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo eliminar el estado de proyecto. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al eliminar estado de proyecto: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ProbarConexion()
    {
        LimpiarMensajes();
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiEstado_Proyectos");
            var respuesta = await cliente.GetAsync(urlBaseApi);
            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Conexión con la API verificada.";
                claseAviso = "alert alert-success";
            }
            else
            {
                mensaje = $"La API respondió con estado {(int)respuesta.StatusCode}.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error de conexión a la API: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(Estado_Proyecto ep)
    {
        estadoProyectoActual = new Estado_Proyecto
        {
            IdProyecto = ep.IdProyecto,
            IdEstado = ep.IdEstado
        };
        existeEstadoProyecto = true;
        textoBotonGuardar = "Actualizar";
        mensaje = "Estado de proyecto seleccionado desde el listado.";
        claseAviso = "alert alert-info";
    }

    private string ObtenerNombreProyecto(int idProyecto)
    {
        var proyecto = listaProyectos.FirstOrDefault(p => p.Id == idProyecto);
        return proyecto?.Titulo ?? "No encontrado";
    }

    private string ObtenerNombreEstado(int idEstado)
    {
        var estado = listaEstados.FirstOrDefault(e => e.Id == idEstado);
        return estado?.Nombre ?? "No encontrado";
    }

    private void LimpiarMensajes()
    {
        mensaje = "";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        estadoProyectoActual = new Estado_Proyecto();
        existeEstadoProyecto = false;
        textoBotonGuardar = "Crear";
        LimpiarMensajes();
    }
    
    private bool Vacio(dynamic p)
    {
        if (p.IdProyecto <= 0)
        {
            mensaje = "Error: Debe seleccionar un proyecto";
            claseAviso = "alert alert-warning";
            return true;
        }
        
        if (p.IdEstado <= 0)
        {
            mensaje = "Error: Debe seleccionar un estado";
            claseAviso = "alert alert-warning";
            return true;
        }
        
        // Validar que no exista ya el estado para este proyecto (solo para creación)
        if (!existeEstadoProyecto && listaEstadosProyectos.Any(ep => ep.IdProyecto == p.IdProyecto))
        {
            mensaje = "Error: Ya existe un estado asignado a este proyecto";
            claseAviso = "alert alert-warning";
            return true;
        }
        
        return false;
    }
}